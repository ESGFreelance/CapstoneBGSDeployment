
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TerraTech Login</title>

    <!-- CSS -->

    <link rel="stylesheet" href="~/TerraAssets/bootstrap/css/bootstrap.min.css">
    @*<link href="~/TerraAssets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/TerraAssets/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/TerraAssets/css/form-elements.css">
    <link rel="stylesheet" href="~/TerraAssets/css/style.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">


                <div class="row">
                    <div class="col-sm-5">



                        <div class="form-box">
                            <div class="form-top">

                                <a href="/Home/Index"><img src="../TerraMaster/images/logo.png" alt="" /></a>
                                <div class="form-top-left">
                                    <h3>Login</h3>
                                    <p>Enter username and password to log on:</p>
                                </div>

                                <div class="form-top-right">
                                    <i class="fa fa-lock"></i>

                                </div>
                            </div>
                            <div class="form-bottom">

                                @using (Html.BeginForm("Authorise", "Entities", FormMethod.Post))
                                {

                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Username</label>
                                        <input type="text" name="Username" placeholder="Username..." class="form-username form-control" id="form-username" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Password</label>
                                        <input type="password" name="Password" placeholder="Password..." class="form-password form-control" id="form-password" required>
                                    </div>

                                    <button type="submit" value="Submit" class="btn">Sign in!</button>
                                }

                            </div>
                        </div>



                    </div>

                    <div class="col-sm-1 middle-border"></div>
                    <div class="col-sm-1"></div>

                    <div class="col-sm-5">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Sign up now</h3>
                                    <p>Join the TerraTech Community</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-pencil"></i>
                                </div>
                            </div>
                            <div class="form-bottom">

                                @using (Html.BeginForm("Register", "Entities", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Username</label>
                                        <input type="text" name="Username" placeholder="Username..." class="form-username form-control" id="form-username" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Password</label>
                                        <input type="password" name="Password" placeholder="Password..." class="form-password form-control" id="form-password" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-first-name">First Name</label>
                                        <input type="text" name="GivenName" placeholder="First Name..." class="form-first-name form-control" id="form-first-name" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-middle-name">Middle Name</label>
                                        <input type="text" name="MaidenName" placeholder="Middle Name..." class="form-middle-name form-control" id="form-middle-name" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-last-name">Last Name</label>
                                        <input type="text" name="FamilyName" placeholder="Last Name..." class="form-last-name form-control" id="form-last-name" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-email">Email</label>
                                        <input type="email" name="Email" placeholder="Email..." class="form-email form-control" id="form-email" required>
                                    </div>



                                    
                                    <p style="color:white;"><input type="checkbox" class="form-check-input" id="exampleCheck1" required> I agree with the <a href="" style="color:greenyellow;" data-toggle="modal" data-target="#myModalUpdate">User Agreement and Privacy Policy</a></p>
                                    <button type="submit" value="Submit" class="btn">Sign me up!</button>

                                }

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>


    <!-- Javascript -->
    <script src="~/TerraAssets/js/jquery-1.11.1.min.js"></script>
    <script src="~/TerraAssets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/TerraAssets/js/jquery.backstretch.min.js"></script>
    <script src="~/TerraAssets/js/scripts.js"></script>
    @*CHART JS AND SWEET ALERT*@
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>


    <!--[if lt IE 10]>
        <script src="~/TerraAssets/js/placeholder.js"></script>
    <![endif]-->
    @*MODAL SECTION UPDATE START*@
    <div class="modal fade" id="myModalUpdate" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content" id="modalwindow">

                <div class="modal-header">
                    <h3 class="modal-title Title">User Agreement and Privacy Policy</h3>
                </div>

                <div class="modal-body">


                </div>

                <div class="modal-footer">
                    <p>Powered by TerraTechPH</p>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" title="Close">Close</button>
                </div>

            </div>
            <!-- Modal content-->
        </div>
    </div>

</body>

</html>



<script>

    $(document).ready(function () {

        //$('#myModalUpdate').modal('show');
    });


    $(document).on("click", ".btnUpdate", function () {
        $('#myModalUpdate').modal('show');
    });

</script>